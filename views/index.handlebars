<div class="container mb-5">
    <div class="row mt-4 text-center">
        <div class="col-md-12">
            <img src="assets/images/burger.png" width="150" alt="burger" class="mb-4">
            <h1>Eat&bull;a&bull;Burger</h1>
        </div>
    </div>

    <div class="row justify-content-center text-center mt-3">
        <div class="col-md-6">
            Enter a burger you'd like to eat & hit the submit button!
        </div>
    </div>

    <div class="row mt-3 text-center">
        <div class="col-md-12">
            <form class="form-inline justify-content-center add-a-burger">
                <div class="form-group mx-sm-3 mb-2">
                    <label for="burger-name" class="sr-only">Enter your burger</label>
                    <input type="text" class="form-control" id="burger-name" placeholder="Enter your burger">
                </div>
                <button type="submit" id="add-burger" class="btn btn-primary mb-2">Submit</button>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        {{!-- Queue --}}
        <div class="col-md-6">
            <div class="row text-center">
                <div class="col-md-12">
                    <h3 class="mb-3">Queue</h3>
                </div>
            </div>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="row align-items-center mb-2 queue-item">
                <div class="col-md-8 col-sm-9 burger-name">{{this.id}}. {{this.burger_name}}</div>
                <div class="col-md-4 col-sm-3 burger-btn text-right">
                    <button type="button" class="btn btn-danger btn-sm eat">Eat Me >></button>
                    <form id="enter-name" class="hide mx-auto">
                        <div class="form-group">
                            <label for="name">Eater's Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Your name">
                        </div>
                    </form>
                    <button type="button" data-id="{{this.id}}"
                        class="btn btn-danger btn-sm devour hide">Devour</button>
                </div>
            </div>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-md-1"></div>

        {{!-- Devoured --}}
        <div class="col-md-5" id="devoured-parent">
            <div class="row text-center">
                <div class="col-md-12">
                    <h3 class="mb-3">Devoured</h3>
                </div>
            </div>
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="row align-items-center mb-2 devoured">
                <div class="col-md-12">{{this.id}}. {{this.burger_name}} [Eaten by: {{this.Customers.0.name}}]</div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>